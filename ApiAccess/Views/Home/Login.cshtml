@using HelseId.Samples.ApiAccess.Configuration
@model HelseId.Samples.ApiAccess.ViewModels.ApiResponseViewModel

<div class="container">
    @if (Model.ClientType == ClientType.ApiAccessForMultiTenantClient)
    {
        <div class="row">
            <partial name="_OrganizationSelector"/>
        </div>    }
    @if (Model.ClientType != ClientType.UserLoginOnly)
    {
        <div class="row">
            <partial name="_ApiTest"/>
        </div>

        @if (@Model.IsSuccess)
        {
            <div class="row">
                <partial name="_ApiResult"/>
            </div>
        }
        else if (@Model.ErrorMessage.Length > 0)
        {
            <div class="row">
                <partial name="_ApiError"/>
            </div>
        }
    }
    <div class="row">
        <partial name="_UserSession"/>
    </div>

    <div class="row">
        <partial name="_UserClaimsListing"/>
    </div>

    <div class="row">
        <partial name="_OtherProperties"/>
    </div>
</div>